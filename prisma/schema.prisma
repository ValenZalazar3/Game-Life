generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Goal {
  id          String    @id @default(uuid())
  title       String
  description String    @db.VarChar
  createdAt   DateTime? @db.Timestamp()
  User        User[]
}

model User {
  id      String @id @default(uuid())
  name    String
  surname String
  email   String @unique

  goal   Goal   @relation(fields: [goalId], references: [id])
  goalId String
}
